!!!5
%html{"ng-app" => "radio"}
  %head{"ng-controller" => "HeadController"}
    %title{"ng-bind" => "Page.title()"} Radio DePaul
    %meta{charset: 'utf-8'}
    %meta{content: 'width=device-width', name: 'viewport'}
    %meta{content: "Radio DePaul is DePaul University's award-winning student radio station. Featuring a vibrant blend of music, talk, news, and sports, Radio DePaul is Chicago's College Connection!", name: 'Description'}
    = stylesheet_link_tag 'screen'
    %meta{content: "!", name: "fragment"}

    %link{:rel => "stylesheet", :type => "text/css", :href => "../css/buttons.css"}
    %link{:rel => "shortcut icon", :type => "image/x-icon", :href => "../favicon.ico"}

    /= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Stardos+Stencil:400,700'
  %body
    %header
      - link_to '/' do
        =image_tag 'logo.png', :id => "logo"
      %nav{'ng-controller' => 'navCtrl'}= partial 'partials/nav'

    %img{'ng-controller' => 'navCtrl', 'ng-src' => '/img/station.jpg', :id => "home_image", 'ng-show' => 'isHome()'}


    .container
      %article{"ng-view" => true}
      %aside#sidebar{'ng-controller' => 'sidebarController'}= partial 'partials/sidebar'

    %footer= partial 'partials/footer'

    #player_fixed= partial 'partials/player'

    /%script{:src => "http://cdnjs.cloudflare.com/ajax/libs/zepto/1.0/zepto.min.js"}
    /%script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    = javascript_include_tag 'lib/angular/angular'
    = javascript_include_tag 'lib/angular/angular-sanitize.min'
    = javascript_include_tag 'lib/angular/angular-route.min'
    = javascript_include_tag 'lib/angular-disqus.min'
    = javascript_include_tag 'lib/angular-animate.min'
    = javascript_include_tag 'lib/promise-tracker.min'
    = javascript_include_tag 'dist/angular-busy.min'
    = javascript_include_tag 'lib/helpers'
    = javascript_include_tag 'lib/carousel'
    = javascript_include_tag 'app'
    = javascript_include_tag 'services'
    = javascript_include_tag 'controllers'
    = javascript_include_tag 'filters'
    = javascript_include_tag 'directives'
    = javascript_include_tag 'lib/soundmanager2-nodebug-jsmin'



